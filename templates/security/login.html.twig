{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
  <div class="container mt-4">

    {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey | trans(error.messagedata, 'security') }}
      </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="z-depth-1-half p-5">
      <div class="md-form">
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
        <label for="username">Nom d'utilisateur</label>
      </div>

      <div class="md-form">
        <input type="password" id="password" name="_password" class="form-control">
        <label for="password">Mot de passe</label>
      </div>

      <button type="submit" class="btn btn-primary ml-0">Se connecter</button>
    </form>

  </div>
{% endblock %}
